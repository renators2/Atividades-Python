frase=input("Digite uma frase: ")
quantidade_a=frase.lower().count("a")
print("A letra A aparece {} vezes.".format(quantidade_a))
posicao_primeira_a=frase.lower().find("a")
if posicao_primeira_a != -1:
    print("A primeira letra A aparece na posição {}".format(posicao_primeira_a+1))
else:
    print("A letra A não foi encontrada na frase.")
posicao_ultima_a=frase.lower().rfind("a")
if posicao_ultima_a != -1:
    print("A ultima letra A aparece na posição {}".format(posicao_ultima_a+1))
else:
    print("A letra A não foi encontrada na frase.")
